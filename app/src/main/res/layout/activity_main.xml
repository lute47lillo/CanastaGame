                            android:layout_weight="1"
                            android:background="@drawable/hearts_nine" />

                        <Button
                            android:id="@+id/hand10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/diamond_ten" />

                        <Button
                            android:id="@+id/handJ"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#4CAF50"
                            tools:visibility="invisible" />

                        <Button
                            android:id="@+id/handQ"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/trebol_queen" />

                        <Button
                            android:id="@+id/handK"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#4CAF50"
                            tools:visibility="invisible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/nPlayerAS"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="#4CAF50"
                            android:clickable="false"
                            android:contextClickable="false"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/nPlayer2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="#4CAF50"
                            android:clickable="false"
                            android:contextClickable="false"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/nPlayer4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="#4CAF50"
                            android:clickable="false"
                            android:contextClickable="false"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/nPlayer5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="#4CAF50"
                            android:clickable="false"
                            android:contextClickable="false"
                            android:text="5"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/nPlayer6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="#4CAF50"
                            android:clickable="false"
                            android:contextClickable="false"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/nPlayer7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="#4CAF50"
                            android:clickable="false"
