                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/nPlayer8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="#4CAF50"
                            android:clickable="false"
